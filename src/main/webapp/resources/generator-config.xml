<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<context id="MySQLContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">
		<property name="beginningDelimiter" value="`"/>
		<property name="endingDelimiter" value="`"/>
		
		<commentGenerator>
			<property name="suppressDate" value="true"/>
			<property name="addRemarkComment" value="true"/>
		</commentGenerator>
		
		<!-- 配置数据源 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver" 
		connectionURL="jdbc:mysql://localhost:3306/cheer1" 
		userId="root" password="zqc67335347"></jdbcConnection>
		
		<!-- 配置model类生成路径 -->
		<javaModelGenerator targetPackage="com.cheer.model" targetProject="src/main/java">
			<property name="trimStrings" value="true"/>
		</javaModelGenerator>
		
		<!-- 配置mapper.xml生成路径 -->
		<sqlMapGenerator targetPackage="com.cheer.mapper" targetProject="src/main/resources">
		</sqlMapGenerator>
		
		<!-- 配置mapper接口生成路径 -->
		<javaClientGenerator targetPackage="com.cheer.mapper" type="XMLMAPPER" targetProject="src/main/java"></javaClientGenerator>
		
		<table tableName="i_%">
			<generatedKey column="id" sqlStatement="MySql"/>
		</table>
	</context>
</generatorConfiguration>